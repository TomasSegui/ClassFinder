generator client {
  provider = "prisma-client-js"
}

model users {
  id        Int      @unique @default(autoincrement())
  email     String   @unique
  password  String
  username  String
  profesor  Boolean  @default(false)
  pfp       String?
  profesion String?
  carrera   String?
  desc      String   @default("Hola, esta es mi descripci√≥n.")
  barrio    String?
  precio    Int?
  materia   String[]
  idsCampus Int[]
}

model campus {
  id           Int    @unique @default(autoincrement())
  id_profe     Int
  posts        post[]
  ids_usuarios Int[]
}

model post {
  id        Int      @unique @default(autoincrement())
  titulo    String
  contenido String
  fecha     DateTime
  file      String
  id_campus Int

  campus campus @relation(fields: [id_campus], references: [id])
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}
