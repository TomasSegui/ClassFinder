generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model users {
  id        Int      @unique @default(autoincrement())
  email     String
  password  String
  username  String
  profesor  Boolean  @default(false)
  pfp       String
  profesion String?
  carrera   String?
  desc      String   @default("Hola, esta es mi descripci√≥n.")
  barrio    String?
  precio    Int?
  materia   String[]
  idsCampus Int[]
}

model campus {
  id           Int    @unique @default(autoincrement())
  id_profe     Int
  ids_usuarios Int[]
  posts        post[]
}

model post {
  id        Int      @unique @default(autoincrement())
  titulo    String
  contenido String
  fecha     DateTime
  file      String
  id_campus Int
  campus    campus   @relation(fields: [id_campus], references: [id])
}
